{
	"name": "phpgt/cron",
	"description": "Run scripts or static functions at regular intervals.",

	"require": {
		"php": ">=7.4",
		"phpgt/cli": "1.*",
		"dragonmantank/cron-expression": "^3.3"
	},
	"require-dev": {
		"phpstan/phpstan": "^v1.8",
		"phpunit/phpunit": "^v9.5"
	},

	"autoload": {
		"psr-4": {
			"Gt\\Cron\\": "./src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Gt\\Cron\\Test\\": "./test/phpunit/"
		}
	},

	"bin": [
		"bin/cron"
	],

	"funding": [
		{
			"type": "github",
			"url": "https://github.com/sponsors/PhpGt"
		}
	]
}
