{
	"name": "phpgt/cron",
	"description": "Run scripts or static functions at regular intervals.",

	"require": {
		"php": ">=7.2",
		"phpgt/cli": "1.*",
		"dragonmantank/cron-expression": "^2.2"
	},
	"require-dev": {
		"phpunit/phpunit": "8.*"
	},

	"autoload": {
		"psr-4": {
			"Gt\\Cron\\": "./src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Gt\\Cron\\Test\\": "./test/unit/"
		}
	},

	"bin": [
		"bin/cron"
	]
}
