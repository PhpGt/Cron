#!/usr/bin/env php
<?php

use Gt\Cli\Application;
use Gt\Cli\Argument\ArgumentList;
use Gt\Cron\Command\RunCommand;
use Gt\Cron\Command\ValidateCommand;

$autoloadLocations = [
	implode(DIRECTORY_SEPARATOR, [
		__DIR__,
		"..",
		"..",
		"..",
		"autoload.php",
	]),
	implode(DIRECTORY_SEPARATOR, [
		__DIR__,
		"..",
		"vendor",
		"autoload.php",
	]),
];

foreach($autoloadLocations as $location) {
	if(file_exists($location)) {
		require($location);
		break;
	}
}

$app = new Application(
	"PHP.Gt Cron",
	new ArgumentList(...$argv),
	new RunCommand(),
	new ValidateCommand()
);
$app->run();